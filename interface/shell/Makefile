##
## TestFarm
## Shell Script Interpreter Library
##
## Author: Sylvain Giroudon
## Creation: 17-AUG-1999
##

GLIB = glib-2.0
#ENABLE_CMD_ALIAS = 1
ENABLE_CMD_HISTORY = 1
ENABLE_CMD_SOURCE = 1

LIBS = libshell.a
BINS = shell_test

include ../../tools/defs.mk


##### OPTIONS
ifdef GLIB
CFLAGS  += $(shell pkg-config --cflags $(GLIB))
LDFLAGS += $(shell pkg-config --libs $(GLIB))
else
# Command history requires GLib,
# so we disable it when Glib is not enabled
ENABLE_CMD_HISTORY=
endif

##### TARGETS
HEADERS = shell_argv.h shell_exec.h shell_std.h shell.h shell_config.h
ifdef ENABLE_CMD_ALIAS
HEADERS += shell_alias.h
endif
ifdef ENABLE_CMD_HISTORY
HEADERS += shell_history.h
endif

##### SOURCES
LIBSRCS = shell_argv.c shell_exec.c shell_std.c shell_std_sleep.c
ifdef ENABLE_CMD_ALIAS
LIBSRCS += shell_alias.c
endif
ifdef ENABLE_CMD_HISTORY
LIBSRCS += shell_history.c
endif
ALLCSRCS = $(LIBSRCS) shell_test.c

shell_config.h:
	echo "// This file is automatically generated at build time" > $@
	echo "// >>>>>>>>>> DO NOT EDIT <<<<<<<<<<" >> $@
	echo "#ifndef __SHELL_CONFIG_H__" >> $@
	echo "#define __SHELL_CONFIG_H__" >> $@
ifdef GLIB
	echo "#ifndef ENABLE_GLIB" >> $@
	echo "#define ENABLE_GLIB" >> $@
	echo "#endif" >> $@
endif
ifdef ENABLE_CMD_ALIAS
	echo "#define ENABLE_CMD_ALIAS" >> $@
endif
ifdef ENABLE_CMD_HISTORY
	echo "#define ENABLE_CMD_HISTORY" >> $@
endif
ifdef ENABLE_CMD_SOURCE
	echo "#define ENABLE_CMD_SOURCE" >> $@
endif
	echo "#endif /* __SHELL_CONFIG_H__ */" >> $@

##### $(BINS) and $(LIBS) DEPENDENCIES
CFLAGS += -I../useful
LDFLAGS += -L. -L../useful -lshell -luseful

libshell.a: shell_config.h $(LIBSRCS:.c=.o)
shell_test: shell_config.h shell_test.o $(LDLIBS:%=lib%.a)

install:
	@echo >/dev/null

clean::
	$(RM) shell_config.h

-include .deps
